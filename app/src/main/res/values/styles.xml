<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="actionBarStyle">@style/CustomActionBar</item>
    </style>

    <style name="AppTheme.Splash" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="CustomActionBar" parent="">
        <item name="android:colorPrimary">@color/general_txt_color</item>
    </style>
    
    <style name="TextViewFifaHomeMainButton">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextViewFifaHomeModeSelected">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/general_txt_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextViewFifaHomeModeUnselected">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/unselected_option</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="StatusBarTransparentTheme" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="GeneralProgressBar" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/general_txt_color</item>
    </style>

    <style name="SearchCustomView" parent="Widget.AppCompat.EditText">
        <item name="android:drawableLeft">@drawable/ic_search</item>
        <item name="android:hint">@string/msg_search</item>
        <item name="android:background">@drawable/bg_search_bar</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textCursorDrawable">@color/white</item>
        <item name="android:textColorHint">@color/color_hint_search_view</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">22sp</item>
    </style>

</resources>
