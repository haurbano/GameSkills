<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="innovappte.mobile.gamesskills">

    <application
        android:name=".GamesSkillsApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".presentation.fifa.celebrationdetail.CelebrationDetailActivity"></activity>
        <activity android:name=".presentation.fifa.celebrations.CelebrationListActivity" />
        <activity
            android:name=".presentation.fifa.skilldetail.SkillDetailsActivity"
            android:theme="@style/StatusBarTransparentTheme" />
